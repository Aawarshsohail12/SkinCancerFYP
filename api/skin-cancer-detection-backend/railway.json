{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "uvicorn app.main:app --host 0.0.0.0 --port $PORT",
    "restartPolicyMaxRetries": 5,
    "healthchecks": {
      "readiness": {
        "command": ["CMD", "curl", "-f", "http://localhost:$PORT/"]
      }
    }
  }
}
